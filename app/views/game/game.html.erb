<script>
/* Set the width of the side navigation to 250px and the left margin of the page content to 250px */
function gopenNav() {
    document.getElementById("gSidenav").style.width = "200px";
    document.getElementById("gmain").style.marginLeft = "200px";
}

/* Set the width of the side navigation to 0 and the left margin of the page content to 0 */
function gcloseNav() {
    document.getElementById("gSidenav").style.width = "0";
    document.getElementById("gmain").style.marginLeft = "0";
}

function expand() {
	document.getElementbyId("gSidenav").style.width = "400px"
	document.getElementById("gmain").style.marginLeft = "400px";

}
</script>

