
<%provide(:title, 'Game Page') %>
<html id='gamebackground'> <!--Remember if we create a game background then create gamebackground.css-->

<head>
	<link type="text/css" rel="stylesheet" href="game.css" />
	<title>Ecowars</title>
</head>
<!-- Game menu bar -->
<span style="font-size:30px;cursor:pointer" onclick="gopenNav()">&#9776; Game Menu</span>
<div id="gSidenav" class="gsidenav">
  <a href="javascript:void(0)" class="gclosebtn" onclick="gcloseNav()">&times;</a>
  <a href="#">About</a>
  <a href="#">Services</a>
  <a href="#">Buys</a>
  <a href="#">Contact</a>
</div>

<!-- Use the element to open the sidenav -->

<!--Copied the javscript into html because javascript in the js file doesnt work other than jquery-->

<script>
/* Set the width of the side navigation to 250px and the left margin of the page content to 250px */
function gopenNav() {
    document.getElementById("gSidenav").style.width = "200px";
    document.getElementById("gmain").style.marginLeft = "200px";
}

/* Set the width of the side navigation to 0 and the left margin of the page content to 0 */
function gcloseNav() {
    document.getElementById("gSidenav").style.width = "0";
    document.getElementById("gmain").style.marginLeft = "0";
}

</script>

<!-- Everything must be put inside the div gmain -->

<div id="gmain">
	<div id = "intro">
		<h1>SAVE THE WORLD!</h1>
		<p>Buy <strong>TREES</strong> to save the world from human destruction!</p>
	</div>

	<div id = "Main">
		<div class="box">
			<p>Trees</p>
        	<input id="qty" value="0" />
    	</div>

		<div id = "buy">
			<button onclick="modify_qty(1)">
			<img src = "https://images.cooltext.com/4780196.png">
			</button>
		</div>

		<div id = "sell">
			<button onclick="modify_qty(-1)">
			<img src = "https://images.cooltext.com/4783121.png">
			</button>
		</div>
	</div>

	<div>
	<p>Timer</p>
	<span id="resources"></span>
	</div>
</div>